package views

templ NotFound() {
	@Base(false, false) {
		@Header(false, "", GetRandomMessage()) {
			<a href="/login">Connexion</a>
		}
		<div class="flex-grow flex items-center justify-center">
			<div class="text-center">
				<h2 class="text-8xl font-bold mb-4">404</h2>
				<p class="text-xl text-base-600">Cette page n'existe pas</p>
			</div>
		</div>
		@Footer(0)
	}
}
